{
  "manifest_version": 3,
  "name": "BetterRYM",
  "icons": {
    "16": "sonemic-16.png",
    "48": "sonemic-48.png",
    "128": "sonemic-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*.rateyourmusic.com/*"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "19": "extension-enabled-19.png",
      "38": "extension-enabled-38.png"
    },
    "default_title": "BetterRYM enabled"
  },
  "permissions": ["storage", "downloads", "tabs"],
  "host_permissions": ["*://*/*"],
  "externally_connectable": {
    "matches": ["*://*.rateyourmusic.com/*"]
  }
}
